<% title('Copy Server Array')%>
<h1>Copy Server Array Inputs</h1>
<div id='get_input_form'>
  <%= form_tag(get_array_inputs_path, :method=>'get', class: 'form-horizontal') do %>
    <h3>Origin</h3>

    <div class="form-group">
      <%= label_tag :origin_account_id, 'Origin Account', class: 'col-sm-3 control-label' %>
      <div class='col-sm-4'>
        <%= select_tag :origin_account_id, options_for_select(rs_accounts), { class: 'form-control account-id', prompt: 'Choose Account' } %>
      </div>
    </div>
    <div class='form-group'>
      <label for="origin_array_id" class="col-sm-3 control-label">Origin Array:</label>
      <div class="col-sm-6">
        <%= text_field_tag :origin_array_id, '', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class="col-sm-offset-3 col-sm-6">
        <span id="helpBlock" class="help-block">In Rightscale, on the ServerArray Info page, look for the <strong>href</strong> line. It will look like <code>/api/server_arrays/302764003</code>. This array id is the last part of the href. You will enter <code>302764003</code></span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-2">
        <%= submit_tag 'Get Inputs', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
